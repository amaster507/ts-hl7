{
  "compilerOptions": {
    "target": "ES2015",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true /* Disallow inconsistently-cased references to the same file. */
    "sourceMap": true,
    "outDir": "dist/",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
  },
  "include": ["src/*"]
}
